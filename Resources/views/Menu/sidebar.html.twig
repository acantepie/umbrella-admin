{% use "UmbrellaAdminBundle:Menu:sidebar_layout.html.twig" %}


<div id="aside" class="app-aside modal nav-dropdown">
    <div class="left navside {{ sidebar_css_class() }}" data-layout="column">

        {# Logo #}
        <div class="navbar no-radius">
            {% include 'UmbrellaAdminBundle:Include:brand.html.twig' %}
        </div>

        {# Menu #}
        <div class="hide-scroll" data-flex>
            <nav class="scroll nav-light">

                <ul class="nav" ui-nav>
                    {% set node = menu.root %}
                    {{ block('node') }}

                </ul>
            </nav>
        </div>

        {# User #}
        {% include 'UmbrellaAdminBundle:Include:userinfo.html.twig' %}

    </div>
</div>
