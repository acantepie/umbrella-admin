<template id="notification-fw-pending-tpl">
    <div class="dropdown-item notify-item disabled">
        <div class="notify-icon bg-{{ 'pending' | job_state_color }}">
            <i class="{{ 'pending' | job_state_icon }}"></i>
        </div>
        <p class="notify-details">[[label]]
            <small class="text-muted">{{ 'pending' | job_state_label }} - [[date]]</small>
        </p>
    </div>
</template>

<template id="notification-fw-running-tpl">
    <div class="dropdown-item notify-item disabled">
        <div class="notify-icon bg-{{ 'running' | job_state_color }}">
            <i class="{{ 'running' | job_state_icon }}"></i>
        </div>
        <p class="notify-details">[[label]]
            <small class="text-muted">{{ 'running' | job_state_label }} - [[date]]</small>
        </p>
    </div>
</template>

<template id="notification-fw-failed-tpl">
    <div class="dropdown-item notify-item disabled">
        <div class="notify-icon bg-{{ 'failed' | job_state_color }}">
            <i class="{{ 'failed' | job_state_icon }}"></i>
        </div>
        <p class="notify-details">[[label]]
            <small class="text-muted">{{ 'failed' | job_state_label }} - [[#ended_at]][[ended_at]][[/ended_at]] [[^ended_at]][[started_at]][[/ended_at]]</small>
        </p>
    </div>
</template>

<template id="notification-fw-finished-tpl">
    <a class="dropdown-item notify-item" href="[[url]]">
        <div class="notify-icon bg-{{ 'finished' | job_state_color }}">
            <i class="{{ 'finished' | job_state_icon }}"></i>
        </div>
        <p class="notify-details">[[label]]
            <small class="text-muted">{{ 'finished' | job_state_label }} - [[#ended_at]][[ended_at]][[/ended_at]] [[^ended_at]][[started_at]][[/ended_at]] - [[runtime]]s</small>
        </p>
    </a>
</template>

<template id="notification-empty-tpl">
    <div class="dropdown-item notify-item disabled">
        <small class="empty">Vous n'avez aucun export</small>
    </div>
</template>