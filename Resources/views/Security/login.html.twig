{% extends '@UmbrellaAdmin/Layout/layout.html.twig' %}

{% block body %}
    <body>
        <div class="account-pages mt-5 mb-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-5">
                        <div class="card">

                            <div class="card-header pt-3 pb-3 text-center bg-primary">
                                {% include "@UmbrellaAdmin/Include/logo.html.twig" %}
                            </div>

                            <div class="card-body p-4">

                                <div class="text-center w-75 m-auto">
                                    <h4 class="text-dark-50 text-center mt-0 font-weight-bold">{{  'action.signin' | trans }}</h4>
                                    <p class="text-muted mb-4">{{ 'message.signin_to_bo' | trans }}</p>
                                </div>

                                {% if error %}
                                    <div class="alert alert-warning text-center">
                                       {{ error.messageKey|trans(error.messageData, 'security') }}
                                    </div>
                                {% endif %}

                                <form action="{{ path('umbrella_admin_login') }}" method="post">

                                    <div class="form-group">
                                        <label for="username">{{ 'form.label.username' | trans }}</label>
                                        <input class="form-control" type="text" id="username" required="required" name="_username">
                                    </div>

                                    <div class="form-group">
                                        <a href="{{ path('umbrella_admin_security_passwordrequest') }}" class="text-muted float-right">
                                            <small>{{ 'action.forget_password' | trans }}</small>
                                        </a>
                                        <label for="password">{{ 'form.label.password' | trans }}</label>
                                        <input class="form-control" type="password" required="required" id="password" name="_password">
                                    </div>

                                    <div class="form-group mb-0 text-center">
                                        <button class="btn btn-primary" type="submit">
                                            <i class="mdi mdi-check mr-1"></i> {{ 'action.signin' | trans }}
                                        </button>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
{% endblock %}


